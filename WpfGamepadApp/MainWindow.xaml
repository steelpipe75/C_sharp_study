<Window x:Class="WpfGamepadApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGamepadApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="750">
    <Grid>
        <Button Name="ButttonStart" Content="Start" HorizontalAlignment="Left" Height="150" Margin="50,50,0,0" VerticalAlignment="Top" Width="300" Click="Button_Click_Start"/>
        <Button Name="ButttonStop" Content="Stop" HorizontalAlignment="Right" Height="150" Margin="0,50,50,0" VerticalAlignment="Top" Width="300" Click="Button_Click_Stop" IsEnabled="False"/>

    </Grid>
</Window>
